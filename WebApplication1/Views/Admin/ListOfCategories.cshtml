@using ProductStore.WebUI.Models;
@model CategoriesListViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

@{ 
    ViewBag.Title = "Список категорий";
}


<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Категории</h1>
        </div>
    </div><!--/.row-->

    <div class="panel panel-primary">
        <div class="panel-heading">
            Список категорий
        </div>
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th></th>
                <th></th>
            </tr>
            @if (Model.Categories.Count() == 0)
            {
                <tr>
                    <td colspan="3" class="text-center">Список категорий пуст</td>
                </tr>
            }
            else
            {
                int i = 0;
                foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>@category.Value</td>
                        <td>@category.Text</td>
                        <td><a href="@Url.Action("EditCategory","Admin", new { id = category.Value})" onclick="return confirm('Вы действительно хотите редактировать выбранную категорию?');"><span class="edit-user glyphicon glyphicon-pencil"></span></a></td>
                        <td><a href="@Url.Action("DeleteCategory","Admin", new { id = category.Value})" onclick="return confirm('Вы действительно хотите удалить выбранную категорию?');"><span class="delete-user glyphicon glyphicon-remove"></span></a></td>
                    </tr>
                }
            }
        </table>
    </div>

    <div class="row">
        <div class="col-lg-12">
            @using (@Html.BeginForm("CreateCategory", "Admin", null))
            {
                <button class="myButton" type="submit" onclick="return confirm('Вы действительно хотите добавить новую категорию?')">Добавить категорию</button>
            }
        </div>
    </div><!--/.row-->
</div><!--/.row-->
</div>	<!--/.main-->

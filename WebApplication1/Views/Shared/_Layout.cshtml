<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TechnoStore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="shop glyphicon-shopping-cart"></span>
                @Html.ActionLink("TechnoStore", "List", "Product", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @using (Html.BeginForm("Find", "Product"))
            {
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" name="searchTehno">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            }
            @if (Request.IsAuthenticated)
            {
                @Html.Action("Summary", "Cart")
                <div class="logmenu">
                    @Html.Partial("_LoginPartial")
                </div>
            }
            else
            {
                <div class="navbar-collapse collapse">
                    @Html.Partial("_LoginPartial")
                </div>
            }
        </div>
        @if (!(HttpContext.Current.Request.Url.AbsolutePath == "/Account/Login" || HttpContext.Current.Request.Url.AbsolutePath == "/Account/Register" || HttpContext.Current.Request.Url.AbsolutePath == "/Manage/Index" || HttpContext.Current.Request.Url.AbsolutePath == "/Manage/ChangePassword"))
        {
            <div class="btn-group-justified">
                @Html.Action("Menu", "Nav")
            </div>
        }
    </div>
    <div class="mypanel">
        @RenderBody()
    </div>
    <div class="clear">

    </div>
    <div id="footer">
        <p class="footer-text">&copy; @DateTime.Now.Year - Дизайн данного сайта разработал <a id="name" href="https://vk.com/id386033776">Дмитрий Морозов</a>.</p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

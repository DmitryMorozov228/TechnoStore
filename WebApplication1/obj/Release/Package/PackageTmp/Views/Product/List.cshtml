@using WebApplication1.HtmlHelpers
@using ProductStore.WebUI.Models;
@model ProductsListViewModel

@{
    ViewBag.Title = "Товары";
}

@if (TempData["find"] != null)
            {
    <div class="style-message alert alert-danger">@TempData["find"]</div>
}

<div id="container" class="masonry">
    @foreach (var p in Model.Products)
    {
        @Html.Partial("ProductSummary", p)
    }
</div>


<div class="links btn-group btn-style">
    @Html.PageLinks(Model.pagingInfo, x => Url.Action("List", new { page = x, category = Model.CurrentCategory }))
</div>
